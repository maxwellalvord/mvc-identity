@using ProjectName.Models;

<div class="container">

  @if (@Model.Count == 0)
  {
    <h3>No Items have been added yet!</h3>
  } 

  <ul>
    @foreach(Item item in Model)
    {
      <li>@Html.ActionLink($"{item.Name}", "Details", new { id = item.ItemId }, new {@class = "myCssClass"})</li>
    }
  </ul>
  <table id="table">
    <tr>
      <td>@Html.ActionLink("Add new items", "Create")</td>
      <td>@Html.ActionLink("Home", "Index", "Home")</td>
    </tr>
  </table>
</div>