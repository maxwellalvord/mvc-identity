@using ProjectName.Models;

<div class="container">
  @if (Model.Count != 0)
  {
    <ul>
      @foreach (Category category in Model)
      {
        <li>@Html.ActionLink($"{category.Name}", "Details", new { id = category.CategoryId })</li>
      }
    </ul>
  } 
  else
  {
    <h3>No Categories have been added yet!</h3>
  }
  <table id="table">
    <tr>
      <td>@Html.ActionLink("Add new Category", "Create")</td>
      
      <td>@Html.ActionLink("Home", "Index", "Home")</td>
    </tr>
  </table>
</div>